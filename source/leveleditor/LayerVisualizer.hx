package leveleditor;

import flixel.util.FlxSort;
import flixel.FlxBasic;
import flixel.group.FlxGroup.FlxTypedGroup;

class LayerVisualizer extends FlxTypedGroup<GenericObjectVisualizer> {

    public var selected(default,set):Bool = false;

    public var enabledByDefault:Bool = true;

	function set_selected(value:Bool):Bool {

        for (object in members) {
            object.onActiveLayerChange(value);
        }

		return selected = value;
	}

    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    override function update(elapsed:Float) {
        super.update(elapsed);
    }

    override function draw() {
        super.draw();
    }

    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    override function add(Object:GenericObjectVisualizer):GenericObjectVisualizer {
        Object.onActiveLayerChange(selected);
        return super.add(Object);
    }
}